<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/icons/tile-70x70.png"/>
      <square150x150logo src="/icons/tile-150x150.png"/>
      <wide310x150logo src="/icons/tile-310x150.png"/>
      <square310x310logo src="/icons/tile-310x310.png"/>
      <TileColor>#3B82F6</TileColor>
    </tile>
    <badge>
      <polling-uri src="/api/notifications/count"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/api/notifications/latest"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
