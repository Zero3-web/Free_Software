const featureLabels = {
  layers: 'Soporte de capas',
  filters: 'Filtros y efectos',
  plugins: 'Soporte de plugins',
  batchProcessing: 'Procesamiento por lotes',
  colorManagement: 'Gestión de color',
  textTools: 'Herramientas de texto',
  vectorTools: 'Herramientas vectoriales'
};

// Schema.org structured data
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": article.title,
  "description": article.description,
  "image": `https://software-gratis.com${article.image}`,
  "author": {
    "@type": "Person",
    "name": article.author.name,
    "email": article.author.email
  },
  "publisher": {
    "@type": "Organization",
    "name": "Software Gratis",
    "logo": {
      "@type": "ImageObject",
      "url": "https://software-gratis.com/logo.png"
    }
  },
  "datePublished": article.publishedDate,
  "dateModified": article.modifiedDate,
  "articleSection": article.category,
  "keywords": article.tags.join(', '),
  "wordCount": "2500",
  "timeRequired": article.readingTime,
  "url": `https://software-gratis.com/blog/alternativas-gratuitas-adobe-creative-suite`,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://software-gratis.com/blog/alternativas-gratuitas-adobe-creative-suite`
  }
