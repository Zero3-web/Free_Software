    bestFor: 'Usuarios avanzados que buscan máxima funcionalidad'
  },
  {
    name: 'Krita',
    free: true,
    openSource: true,
    rating: 4.7,
    platforms: ['Windows', 'macOS', 'Linux'],
    features: {
      layers: true,
      filters: true,
      plugins: true,
      batchProcessing: false,
      colorManagement: 'Avanzado',
      textTools: 'Básico',
      vectorTools: 'Básico'
