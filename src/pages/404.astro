---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button';
---

<Layout 
  title="404 - Page Not Found | Opensoftware"
  description="The page you're looking for could not be found. Discover our free software catalog instead."
>
  <Header slot="header" />
  
  <main id="main-content" class="min-h-screen">
    <div class="container-wide py-32">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Illustration -->
        <div class="mb-12">
          <div class="relative inline-block">
            <div class="text-[200px] md:text-[300px] font-extrabold text-gray-200">
              404
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-24 h-24 md:w-32 md:h-32 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-12 h-12 md:w-16 md:h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Error Message -->
        <div class="mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
            Oops! Page Not Found
          </h1>
          <p class="text-xl text-gray-600">
            The page you're looking for doesn't exist or has been moved. Let's get you back to exploring amazing free software.
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <Button 
            href="/"
            variant="primary"
            size="lg"
            className="inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h2a2 2 0 012 2v2H8V5z"></path>
            </svg>
            Browse Software
          </Button>
          
          <Button 
            href="/blog"
            variant="secondary"
            size="lg"
            className="inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            Read Blog
          </Button>
        </div>

        <!-- Popular Categories -->
        <div class="border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900">
            Popular Categories
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/software/productividad" class="group p-6 bg-white">
              <div class="w-12 h-12 bg-blue-100">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Productivity</h3>
              <p class="text-gray-600">Office suites, note-taking apps, and productivity tools</p>
            </a>

            <a href="/herramientas" class="group p-6 bg-white">
              <div class="w-12 h-12 bg-green-100">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Development Tools</h3>
              <p class="text-gray-600">Code editors, compilers, and development utilities</p>
            </a>

            <a href="/blog" class="group p-6 bg-white">
              <div class="w-12 h-12 bg-purple-100">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Blog & Guides</h3>
              <p class="text-gray-600">Latest news, tutorials, and software reviews</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
