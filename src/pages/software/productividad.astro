---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import NotificationRoot from '../../components/NotificationRoot';
import { products } from '../../data/products';

const productivityProducts = products.filter(product => 
  product.category === 'Productividad' || 
  product.tags?.includes('productividad') ||
  product.tags?.includes('oficina') ||
  product.name.toLowerCase().includes('office') ||
  product.name.toLowerCase().includes('word') ||
  product.name.toLowerCase().includes('excel') ||
  product.category === 'Productivity'
);
---

<Layout 
  title="Productivity Software - Free Professional Tools"
  description="Download the best free productivity software: office suites, text editors, task managers, and more professional tools."
>
  <Header slot="header" />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 via-white to-purple-50">
      <div class="container-wide">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900">
            <span class="text-gradient-animate">Productivity</span> Software
          </h1>
          <p class="text-xl md:text-2xl text-gray-600">
            Professional tools to boost your productivity at no cost
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Overview -->
    <section class="page-section">
      <div class="container-wide">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="text-center p-6 bg-white">
              <div class="w-16 h-16 bg-blue-100">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Office Suites</h3>
              <p class="text-gray-600">Complete alternatives to Microsoft Office</p>
            </div>

            <div class="text-center p-6 bg-white">
              <div class="w-16 h-16 bg-green-100">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Task Management</h3>
              <p class="text-gray-600">Organize your work and projects efficiently</p>
            </div>

            <div class="text-center p-6 bg-white">
              <div class="w-16 h-16 bg-purple-100">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Text Editors</h3>
              <p class="text-gray-600">Advanced tools for writing and editing</p>
            </div>
          </div>

          <!-- Featured Software -->
          <div class="mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
              Featured Software
            </h2>
            
            <NotificationRoot products={productivityProducts} page="grid" client:load />
          </div>

          <!-- CTA Section -->
          <div class="text-center">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white">
              <h3 class="text-2xl font-bold mb-4">¿No encuentras lo que buscas?</h3>
              <p class="text-lg mb-6">
                Explora todas nuestras categorías de software o contáctanos para sugerencias
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                  href="/software" 
                  class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
                >
                  Ver todo el software
                </a>
                <a 
                  href="/contacto" 
                  class="px-6 py-3 border border-white text-white font-semibold rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
                >
                  Hacer sugerencia
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
