---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import NotificationRoot from '../../components/NotificationRoot';
import { products } from '../../data/products';

const designProducts = products.filter(product => 
  product.category === 'Dise√±o Gr√°fico' || 
  product.category === 'Dise√±o' ||
  product.category === 'Design' ||
  product.tags?.includes('dise√±o') ||
  product.tags?.includes('design') ||
  product.tags?.includes('grafico') ||
  product.tags?.includes('arte') ||
  product.name.toLowerCase().includes('photoshop') ||
  product.name.toLowerCase().includes('illustrator') ||
  product.name.toLowerCase().includes('design') ||
  product.name.toLowerCase().includes('gimp') ||
  product.name.toLowerCase().includes('inkscape')
);
---

<Layout 
  title="Graphic Design Software - Free Professional Tools"
  description="Download the best free graphic design software: image editors, vector illustration, digital design tools and more professional applications."
>
  <Header slot="header" />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-purple-50 via-white to-pink-50 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">Graphic Design</span> Software
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-8">
            Professional tools for creating, editing and designing impactful visual content
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600">
            <span class="bg-white px-4 py-2 rounded-full shadow-sm hover:shadow-md transition-shadow cursor-pointer">‚ú® Image Editors</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm hover:shadow-md transition-shadow cursor-pointer">üé® Vector Illustration</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm hover:shadow-md transition-shadow cursor-pointer">üñºÔ∏è Photo Retouching</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm hover:shadow-md transition-shadow cursor-pointer">üé≠ Digital Art</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Professional Design Tools
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            From free Adobe alternatives to specialized design software, 
            find the best tools for your creative workflow.
          </p>
        </div>
        
        <NotificationRoot products={designProducts} page="grid" client:load />
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center group cursor-pointer">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-200 group-hover:scale-110 transition-all duration-300">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors">Professional Editors</h3>
            <p class="text-gray-600">Free alternatives to Photoshop, Illustrator and other Adobe software for professional editing.</p>
          </div>
          
          <div class="text-center group cursor-pointer">
            <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-pink-200 group-hover:scale-110 transition-all duration-300">
              <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-pink-600 transition-colors">Digital Art</h3>
            <p class="text-gray-600">Specialized tools for digital painting, illustration and artistic creation.</p>
          </div>
          
          <div class="text-center group cursor-pointer">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-200 group-hover:scale-110 transition-all duration-300">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">High Performance</h3>
            <p class="text-gray-600">Optimized software for working with large files and complex projects without compromising speed.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
