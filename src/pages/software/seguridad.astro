---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import NotificationRoot from '../../components/NotificationRoot';
import { products } from '../../data/products';

const securityProducts = products.filter(product => 
  product.category === 'Seguridad' || 
  product.category === 'Antivirus' ||
  product.tags?.includes('seguridad') ||
  product.tags?.includes('antivirus') ||
  product.tags?.includes('firewall') ||
  product.tags?.includes('proteccion') ||
  product.name.toLowerCase().includes('security') ||
  product.name.toLowerCase().includes('antivirus') ||
  product.name.toLowerCase().includes('defender')
);
---

<Layout 
  title="Software de Seguridad - Gratis"
  description="Descarga las mejores herramientas de seguridad gratuitas: antivirus, firewall, protección contra malware y herramientas de privacidad."
>
  <Header slot="header" />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-indigo-50 via-white to-blue-50 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Software de <span class="bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">Seguridad</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-8">
            Protege tu sistema y datos con las mejores herramientas de seguridad y privacidad gratuitas
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600">
            <span class="bg-white px-4 py-2 rounded-full shadow-sm">🛡️ Antivirus</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm">🔥 Firewall</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm">🔒 Privacidad</span>
            <span class="bg-white px-4 py-2 rounded-full shadow-sm">🔍 Anti-malware</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Herramientas de Protección Digital
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Mantén tu sistema seguro con antivirus de calidad, herramientas anti-malware 
            y software de protección de privacidad.
          </p>
        </div>
        
        <NotificationRoot products={securityProducts} page="grid" client:load />
      </div>
    </section>
  </main>
  <Footer />
</Layout>
