---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---


<Layout title="Contact - Free Software">
  <Header slot="header" />
  <main class="min-h-screen bg-[var(--bg-secondary)]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8 sm:mb-12">
          <h1 class="text-responsive-2xl sm:text-responsive-3xl lg:text-4xl font-bold text-[var(--text-primary)] mb-4">
            Contact Us
          </h1>
          <p class="text-responsive-base sm:text-responsive-lg lg:text-xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
            Do you have questions, suggestions, or need help? We are here to assist you. <br class="hidden sm:block" />
            Write to us and we will respond as soon as possible.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12">
          <!-- Contact Form -->
          <div class="bg-[var(--bg-primary)] rounded-xl shadow-lg p-6 sm:p-8 order-2 lg:order-1">
            <h2 class="text-responsive-lg sm:text-responsive-xl lg:text-2xl font-semibold text-[var(--text-primary)] mb-4 sm:mb-6">
              Send Us a Message
            </h2>
            <form class="space-y-4 sm:space-y-6" id="contact-form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-[var(--text-secondary)] mb-2">
                    Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-3 py-2.5 sm:px-4 sm:py-3 border border-[var(--border-primary)] rounded-lg bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:ring-2 focus:ring-[var(--accent-primary)] focus:border-transparent transition-all text-sm sm:text-base"
                    placeholder="Your full name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-[var(--text-secondary)] mb-2">
                    Email *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-3 py-2.5 sm:px-4 sm:py-3 border border-[var(--border-primary)] rounded-lg bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:ring-2 focus:ring-[var(--accent-primary)] focus:border-transparent transition-all text-sm sm:text-base"
                    placeholder="your@email.com"
                  />
                </div>
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-[var(--text-secondary)] mb-2">
                  Subject *
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-3 py-2.5 sm:px-4 sm:py-3 border border-[var(--border-primary)] rounded-lg bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:ring-2 focus:ring-[var(--accent-primary)] focus:border-transparent transition-all text-sm sm:text-base"
                >
                  <option value="">Select a topic</option>
                  <option value="general">General Inquiry</option>
                  <option value="software">Software Request</option>
                  <option value="bug">Report a Bug</option>
                  <option value="suggestion">Suggestion</option>
                  <option value="partnership">Partnership</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-[var(--text-secondary)] mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-3 py-2.5 sm:px-4 sm:py-3 border border-[var(--border-primary)] rounded-lg bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:ring-2 focus:ring-[var(--accent-primary)] focus:border-transparent transition-all resize-none text-sm sm:text-base"
                  placeholder="Describe your inquiry or message..."
                ></textarea>
              </div>

              <div class="flex items-start space-x-3">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="w-4 h-4 text-[var(--accent-primary)] bg-[var(--bg-secondary)] border-[var(--border-primary)] rounded focus:ring-[var(--accent-primary)] mt-1 flex-shrink-0"
                />
                <label for="privacy" class="ml-2 text-sm text-[var(--text-secondary)]">
                  I accept the <a href="/privacidad" class="text-[var(--accent-primary)] hover:underline">Privacy Policy</a> *
                </label>
              </div>

              <button
                type="submit"
                class="w-full bg-[var(--accent-primary)] text-white py-3 px-6 rounded-lg font-semibold hover:bg-[var(--accent-secondary)] transition-colors focus:ring-2 focus:ring-[var(--accent-primary)] focus:ring-offset-2"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <!-- Main Information -->
            <div class="bg-[var(--bg-primary)] rounded-xl shadow-lg p-8">
              <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-6">
                Contact Information
              </h2>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-10 h-10 bg-[var(--accent-primary)] rounded-lg flex items-center justify-center">
                    <span class="text-white text-lg">üìß</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[var(--text-primary)]">Email</h3>
                    <p class="text-[var(--text-secondary)]">contact@freesoftware.com</p>
                    <p class="text-sm text-[var(--text-muted)]">Response within 24-48 hours</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-10 h-10 bg-[var(--accent-primary)] rounded-lg flex items-center justify-center">
                    <span class="text-white text-lg">üìû</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[var(--text-primary)]">Phone</h3>
                    <p class="text-[var(--text-secondary)]">+1 (555) 123-4567</p>
                    <p class="text-sm text-[var(--text-muted)]">Mon-Fri 9:00am-6:00pm EST</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-10 h-10 bg-[var(--accent-primary)] rounded-lg flex items-center justify-center">
                    <span class="text-white text-lg">üìç</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-[var(--text-primary)]">Address</h3>
                    <p class="text-[var(--text-secondary)]">123 Tech Street<br/>Digital City, DC 12345<br/>United States</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Quick FAQ -->
            <div class="bg-[var(--bg-primary)] rounded-xl shadow-lg p-8">
              <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-6">
                Frequently Asked Questions
              </h2>
              <div class="space-y-4">
                <div>
                  <h3 class="font-semibold text-[var(--text-primary)] mb-2">Is all the software really free?</h3>
                  <p class="text-sm text-[var(--text-secondary)]">Yes, we only include completely free and legal software.</p>
                </div>
                <div>
                  <h3 class="font-semibold text-[var(--text-primary)] mb-2">How can I request new software?</h3>
                  <p class="text-sm text-[var(--text-secondary)]">Use the form with the subject "Software Request".</p>
                </div>
                <div>
                  <h3 class="font-semibold text-[var(--text-primary)] mb-2">Do you offer technical support?</h3>
                  <p class="text-sm text-[var(--text-secondary)]">We provide help with downloads, but not with the software itself.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  // Contact form handler
  const form = document.getElementById('contact-form');
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      // Normally you would send the data to a server here
      // For demo, just show a message
      alert('Thank you for your message! We will get back to you soon.');
      (form as HTMLFormElement).reset();
    });
  }
</script>
